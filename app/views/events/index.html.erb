<h3>These are All the Events</h3>

<ul class = "thumbnails">
	<% @events.each do |t|%>
		<li class = "span12">
			<div class = "row-fluid">
				<div class = "span12">
					<div class = "row-fluid">
						<div class = "span4">
							<div class = "cont">
								<img class = "event_avatar" src= "<%= t.avatar %>">
							</div>
						</div>
						<div class = "span5">
							<p class = "event_title"><%= t.title %></p>
						</div>
					</div>
						<%= link_to "Name These Faces", event_path(t.id) %></br>
						<%= link_to "Add to My Events", :controller => :events, 
													:action => 'add_event_to_user', 
													:current_user => @current_user,
													:event_title => t.title %></br>
				</div>
			</div>
		</li>
	<% end %>
</ul>


<script>
	$(window).load(function(){
	 $('.cont').find('img').each(function(){
	  var imgClass = (this.width/this.height > 1) ? 'wide' : 'tall';
	  $(this).addClass(imgClass);
	 })
	})
</script>