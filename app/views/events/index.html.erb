<h1 class = "page_title">Event Listing</h1>
<div class = "container">
	<ul class = "thumbnails">
		<% @events.each do |t|%>
			<li class = "span12 listed">
				<div class = "row-fluid">
					<div class = "span12">
						<div class = "row-fluid">
							<div class = "span3">
								<div class = "event_icon">
									<div class = "cont">
										<img class = "event_avatar" src= "<%= t.avatar %>">
									</div>
								</div>
							</div>
							<div class = "span5">
								<p class = "event_title"><%= t.title %></p>
								<p class = "event_description"><%= t.description %></p>
							</div>
							<div class = "row-fluid">
								<div class = "span2">
									<%= link_to "Play", event_path(t.id), class: "landing-button" %>
								</div>
								<div class = "span2">
									<%= link_to "Add", {:controller => :events, 
															:action => 'add_event_to_user', 
															:current_user => @current_user,
															:event_title => t.title}, class: "landing-button" %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</li>
		<% end %>
	</ul>
</div>	

<script>
	$(window).load(function(){
	 $('.cont').find('img').each(function(){
	  var imgClass = (this.width/this.height > 1) ? 'wide' : 'tall';
	  $(this).addClass(imgClass);
	 })
	})
</script>