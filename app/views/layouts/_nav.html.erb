<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="#">NameFace</a>
    <ul class="nav">
      <!-- if currently in specific controllers, show following nav items -->

      <li class="<%= 'active' if params[:controller] == 'users' && params[:action] == 'index' %>"><a href="/">Home</a></li>
      <li class="<%= 'active' if params[:controller] == 'events' && params[:action] == 'index' %>">
        <%= link_to "All Events", events_path %>
      </li>
      <% if logged_in? %>
          <li class="<%= 'active' if params[:controller] == 'users' && params[:action] == 'show' %>">
          <%= link_to "My Events", user_path(current_user) %>
          </li>
          <li ckass="<%= 'active' if params[:controller] == 'events' && params[:action] == 'new' %>">
          <%= link_to "Create Events", new_event_path %>
          </li>
      <% end %>
    </ul>

  <div class="pull-right">
    <% if logged_in? %>
      <%= link_to 'Logout', :session, :method => :delete, class: 'btn' %>
    <% else %>
      <%= link_to 'Sign Up', [:new, :user], class: 'btn btn-primary' %>
      <%= link_to 'Sign In', [:new, :session], class: 'btn btn-success' %>
    <% end %>
   </div>

  </div>
</div>
