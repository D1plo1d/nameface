<ul class = "thumbnails">	
	<% i=0 %>
	<% @random_users.each do |user| %>	
		<li class = "span4" id="<%="#{i}"%>">
			<div class = "thumbnail">
				<div class = "imgcontainer">
					<img class = "nameis" src ="assets/nameis.png"/>
					<img class = "faceis" src = "<%=user.avatar.url(:thumb) %>" >
					</div>
				<% wrong_users = User.where("users.id NOT IN (?)", [user]).sample(2) %>
				<% wrong_users.map(&:first_name).each do |name| %>
					<h4 class ="wrongname"><%= name %></h4>			
				<% end %>
				<h4 class="realname"><%= user.name %></h4>
				<% i+=1 %> 	
			</div>
		</li>
	<% end %>
</ul>

