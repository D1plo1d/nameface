
<!-- put in form tag method => :get -->
<%=form_tag(users_path, :method => 'get', :multipart => true) do %>
	<%= select_tag(:cardview, options_for_select([
		[3,'3'],
		[6,'6'],
		[9,'9'],
		[12,'12']
		], :selected => params[:cardview]  ))%>
	<%= submit_tag 'Submit' %>
<%end%>

<%= render "/users/facelist" %>

<ul class="thumbnails">
	<% @random_users.each do |user| %>	
	  <li class="span4">
	    <div class="thumbnail">
	      <img src="/assets/nameis.png" alt="name pic">
	      <img src="<%=user.avatar.url(:thumb) %>" alt="name pic">
			<p class = "username"><%= user.name %></p>
			<% wrong_users = User.where("users.id NOT IN (?)", [user]).sample(2) %>
			<% wrong_users.map(&:first_name).each do |name| %>
				<h4 class ="wrongname"><%= name %></h4>			
			<% end %>
			<h4 class="realname"><%= user.name %></h4>
	    </div>
	  </li>
	<% end %>
</ul>


